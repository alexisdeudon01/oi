[MAIN]
fail-under=8.0
ignore=CVS,.git,__pycache__,.venv,venv
jobs=0
recursive=yes

[MESSAGES CONTROL]
disable=line-too-long,duplicate-code
enable=useless-suppression,deprecated-pragma,use-symbolic-message-instead

[FORMAT]
max-line-length=100
expected-line-ending-format=LF

[DESIGN]
max-args=8
max-positional-arguments=6
max-attributes=12
max-public-methods=20
max-locals=15
max-branches=12
max-statements=50

[SIMILARITIES]
min-similarity-lines=6
ignore-imports=yes
ignore-docstrings=yes

[TYPECHECK]
ignored-modules=pyvis,tailscale

[LOGGING]
logging-format-style=new

[CLASSES]
defining-attr-methods=__init__,__new__,setUp,__post_init__
valid-classmethod-first-arg=cls
valid-metaclass-classmethod-first-arg=cls

[IMPORTS]
known-third-party=requests,pytest,numpy,pandas
allow-wildcard-with-all=no
